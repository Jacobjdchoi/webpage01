<h2 class="page-title"><%= t(".title") %></h2>
<div class="locations">
    <div class="small-12 large-6 column">
        <h4><%= t(".hq.title") %></h4>
        <div class="locations-photo" style="display: none;">
            <%= image_tag("headquarter_image.jpg")%>
        </div>
        <div class="gMapsArea">
            <div id="map1">
                <iframe width="100%" height="300px" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=%ED%98%B8%EC%84%9C%EB%8C%80%EB%B2%A4%EC%B2%98%ED%83%80%EC%9B%8C&key=AIzaSyC_P_JGtdJSICJkGF0L_f_cxMiF2bm5RGM" allowfullscreen></iframe>
            </div>
        </div>
        <table class="small-12 large-12 column">
            <tr>
                <td><%= t(".addressTitle") %>:</td>
                <td class="locations address"><%= t(".hq.address")%></td>
            </tr>
            <tr>
                <td><%= t(".telTitle") %>:</td>
                <td><a href="tel:<%= t('.hq.tel') %>"><%= t(".hq.tel")%></a></td>
            </tr>
            <tr>
                <td><%= t(".faxTitle") %>:</td>
                <td><%= t(".hq.fax") %></td>
            </tr>
        </table>
    </div>
    <div class="small-12 large-6 column">
        <h4><%= t(".bs.title") %></h4>
        <div class="locations-photo" style="display: none;">
            <%= image_tag("busan_office_image.png")%>
        </div>
        <div class="gMapsArea">
            <div id="map2">
                <iframe width="100%" height="300px" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=t-plex%EB%B6%80%EC%82%B0&key=AIzaSyC_P_JGtdJSICJkGF0L_f_cxMiF2bm5RGM" allowfullscreen></iframe>
            </div>
        </div>
        <table class="small-12 large-12 column">
            <tr>
                <td><%= t(".addressTitle") %>:</td>
                <td class="locations address"><%= t(".bs.address") %></td>
            </tr>
            <tr>
                <td><%= t(".telTitle") %>:</td>
                <td><a href="tel:<%= t('.bs.tel') %>"><%= t(".bs.tel") %></a></td>
            </tr>
            <tr>
                <td><%= t(".faxTitle") %>:</td>
                <td><%= t(".bs.fax") %></td>
            </tr>
        </table>
    </div>
    <div style="clear: both; width:100%; height:5px;"></div>
</div>