<% if admin_signed_in? %>
<h2>다운로드 리스트</h2>
<%= link_to "새 다운로드 업로드 하기", new_attachment_path %>
<table>
  <thead>
    <tr>
      <th>이름</th>
      <th>수정</th>
      <th>삭제</th>
    </tr>
  </thead>
  <tbody>
    <% @attachments.each do |attachment| %>
    <tr>
      <td><%= attachment.file_path.to_s.split('/').last %></td>
      <td><%= link_to "수정", edit_attachment_path(attachment) %></td>
      <td><%= link_to "삭제", attachment_path(attachment), method: :delete,data:{ confirm: "정말 삭제 하시겠습니까?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>