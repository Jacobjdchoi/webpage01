<h1><%= t(".title") %></h1>
<div class="row">
    <h3><%= notice %></h3>
    <div class="small-12 large-6 columns phone">
        <h3><%= t(".callUs") %></h3>
        <table>
            <thead>
                <tr>
                    <td><%= t(".telInfo") %></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= t("pages.locations.telTitle") %>:</td>
                    <td><a href="tel:<%= t('pages.locations.hq.tel') %>"><%= t("pages.locations.hq.tel") %></a></td>
                </tr>
                <tr>
                    <td><%= t("pages.locations.faxTitle") %>:</td>
                    <td><%= t("pages.locations.hq.fax") %></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="small-12 large-6 columns email">
        <h3><%=t(".email.leaveAnEmail") %></h3>
        <%= form_for(@contact) do |f| %>
            <% if @contact.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

                  <ul>
                  <% @contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
            <% end %>
            <div>
                <label for="name"><%= t(".email.name") %></label>
                <%= f.text_field :name %>
            </div>
            <div>
                <label for="company"><%= t(".email.company") %></label>
                <%= f.text_field :company %>
            </div>
            <div>
                <label for="email"><%= t(".email.email") %></label>
                <%= f.email_field :email %>
            </div>
            <div>
                <label for="body"><%= t(".email.message") %></label>
                <%= f.text_area :body %>
            </div>
            <div class="actions">
                <%= f.submit "#{t('.email.submitButton')}", :class => "button" %>
            </div>
        <% end %>
    </div>
</div>