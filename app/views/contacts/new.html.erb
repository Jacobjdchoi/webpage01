<h1>Contact Us</h1>
<div class="row">
    <div class="small-12 large-6 columns phone">
        <h3>Call us</h3>
        <table>
            <thead>
                <tr>
                    <td>Phone Number</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Phone:</td>
                    <td><a href="tel:+82-2-2627-5625">+82-2-2627-5625</a></td>
                </tr>
                <tr>
                    <td>Fax:</td>
                    <td>+82-2-2627-5629</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="small-12 large-6 columns email">
        <h3>Or Leave an E-Mail</h3>
        <%= form_for(@contact) do |f| %>
            <% if @contact.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
                
                  <ul>
                  <% @contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
            <% end %>
            <div>
                <label for="name">Your name </label>
                <%= f.text_field :name %>
            </div>
            <div>
                <label for="email">Your E-mail address</label>
                <%= f.text_field :email %>
            </div>
            <div>
                <label for="title">Title</label>
                <%= f.text_field :title %>
            </div>
            <div>
                <label for="body">Body</label>
                <%= f.text_area :body %>
            </div>
            <div class="actions">
                <%= f.submit "Submit!", :class => "button" %>
            </div>
        <% end %>
    </div>
</div>