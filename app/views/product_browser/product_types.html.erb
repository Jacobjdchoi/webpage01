<ul class="brands_nav_area">
    <li class="brand_links_description"></li>
  <% @brands.each do |brand| %>
    <li class="brand_links"><%= link_to_unless_current brand.name, pb_pt_path(brand.product_types.first) %></li>
  <% end %>
</ul>
<div class="brand_logo_header">
  <%= image_tag @brand.photos.first.pics.url(:logo), class: "brand_logo" %>
</div>
<div class="tab_menu">
  <ul class="product_type_list">
    <% @brand.product_types.each do |product_type| %>
      <li class="product_type_items"><%= link_to_unless_current product_type.name, pb_pt_path(product_type) %></li>
    <% end %>
  </ul>
</div>
<div class="products_index">
  <h4 class="product_type_header"><%= @product_type.name %></h4>
  <% @product_type.products.each do |product| %>
    <fieldset>
      <h5><%= product.name %></h5>
      <div class="product_image_area">
        <% if product.photos.present? %>
        <%= image_tag product.photos.first.pics.url(:logo), class: 'product_image' %>
        <% end %>
      </div>
      <div class="product_details">
        <%= raw(product.summary) %>
      </div>
      <p class="product_links">
        <%= link_to product.url, target: '_blank' do %>
          <%= t(".learnmore") %> <span class="icomoon" data-icon="&#xeec9;"></span>
        <% end %>
      </p>
    </fieldset>
  <% end %>
</div>