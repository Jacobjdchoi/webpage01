<div class="content-container customers">
  <div class="page-image-container">
    <div class="page-image customers">
      <h2 class="page-image-title"><%= title t(".title") %></h2>
    </div>
  </div>
  <h2 class="page-title"><%= title t(".title") %></h2>
  <div class="customer-index-container">
      <% @customers.each do |customer| %>
      <div class="customer-box">
        <div>
          <div class="customer-logo-and-name" data-style="display: flex;">
            <% customer.photos.each do |photo| %>
              <%= image_tag photo.pics.url(:logo), class: 'customer-logo', style: "-ms-transform: translateY(-50%);" %>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>